modules = ["nodejs-20", "postgresql-16"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5002
externalPort = 3000

[deployment]
run = ["sh", "-c", "npm run start"]
