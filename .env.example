# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Server Configuration
NODE_ENV=development
PORT=5000

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Replit Authentication (Optional - for Replit deployments only)
# If not set, only local authentication will be available
REPL_ID=
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=localhost:5000

# Feature Flags
ENABLE_REPLIT_AUTH=false

# External API Configuration
# These are used for the /api/external/* endpoints that the Hydrogen storefront connects to
# API keys are generated in the WholesaleOS Admin > Settings > API Keys page
# Note: No configuration needed here - API keys are stored in the database

# Cloudflare R2 Storage (Shared media storage between WholesaleOS and Hydrogen)
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=rich-habits-media
CLOUDFLARE_R2_PUBLIC_URL=https://media.rich-habits.com
